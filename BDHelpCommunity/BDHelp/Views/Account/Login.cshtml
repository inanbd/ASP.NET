<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@section scripts
{
    <script type="text/javascript">
        function SetMargin() {
            var windowHeight = $(window).height();
            var topMargin = (windowHeight - 500) / 2;
            $('.loginContainer').css({
                "margin-top": topMargin
            });
        }

        $(document).ready(function () {
            SetMargin();

            $(window).resize(function () {

                SetMargin();
            });
            $(function () {
                $("div.validation-summary-errors").has("li:visible").addClass("alert alert-danger");
            });
        });
    </script>
}

@using (Html.BeginForm())
{
    <div class="col-md-4 col-md-offset-4">
        @Html.ValidationSummary(true)
      
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Please sign in</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @autocomplete = "off", @placeholder = "Username", id = "un" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @autocomplete = "off", @placeholder = "Password", type = "Password", id = "up" })
                    </div>
                </div>
                <div class="checkbox">
                    <label>
                        <input name="remember" type="checkbox" value="Remember Me">
                        Remember Me
                    </label>
                </div>
                <p>
                    <a href="#">Lost your password?</a>
                </p>
                <p>
                    Don't Have Account?<a href="~/Account/Register">Register from here.</a>
                </p>

            </div>
            <div class="panel-footer" style="text-align: right;">

                <button id="btnload" type="submit" class="btn btn-primary btn-labeled">
                    <span class="btn-label"><i class="glyphicon glyphicon-ok"></i></span>Login
                </button>

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div id="pnlError" class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                }


                <a class="btn btn-danger btn-labeled" href="@Url.Action("Index", "Home")">
                    <span class="btn-label"><i class="glyphicon glyphicon-remove"></i></span>Cancel
                </a>
            </div>
        </div>
    </div>
}

